<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_best_hotel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg" />




            <RelativeLayout
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/shape"

                >

                <TextView
                    android:id="@+id/tv_price_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:text="Price : "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingStart="@dimen/_5sdp"

                    />

                <TextView
                    android:id="@+id/tv_price_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/tv_price_hotel"
                    android:text="1200"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </RelativeLayout>


            <!--<ImageView-->
                <!--android:id="@+id/iv_star_hotel"-->
                <!--android:layout_width="@dimen/_20sdp"-->
                <!--android:layout_height="@dimen/_20sdp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_marginTop="@dimen/_15sdp"-->
                <!--android:layout_marginRight="@dimen/_15sdp"-->
                <!--android:src="@drawable/star"-->
                <!--android:background="#5C000000"-->

                <!--/>-->
            <RelativeLayout
                android:id="@+id/relative_name_hotel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/shape"
                >

                <TextView
                    android:id="@+id/tv_best_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:layout_centerVertical="true"
                    android:text="@string/hotels"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/tv_country_hotel"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/tv_country_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_centerVertical="true"
                    android:text="Dubai"
                    android:textColor="@color/white"
                    android:textStyle="bold"

                    />


            </RelativeLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>