<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plans_background1"
    android:orientation="vertical"
    tools:context=".activities.ReserveRoom"

    >

    <RelativeLayout
        android:id="@+id/relative_flight_tamm"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/back_pressed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/back_pressed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="15dp"
                android:text="@string/back"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />

        <ImageView
            android:id="@+id/iv_booked_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_button" />

    </RelativeLayout>

    <ImageView

        android:id="@+id/img_bigline"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_below="@+id/relative_flight_tamm"
        android:src="@drawable/line1" />


    <ImageView
        android:id="@+id/img_hotel"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/img_bigline"
        android:layout_centerInParent="true"
        android:src="@drawable/hotel1"


        />

    <TextView
        android:id="@+id/txt_tamm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_hotel"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="30dp"


        />

    <TextView
        android:id="@+id/txt_hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tamm"
        android:layout_centerInParent="true"
        android:text="@string/hotels"
        android:textColor="@color/app_color"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/img_smallline"
        android:layout_width="250dp"
        android:layout_height="12dp"
        android:layout_below="@+id/txt_hotels"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/line1" />

    <TextView
        android:id="@+id/txt_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_smallline"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/best_hotels_deals"
        android:textColor="@color/app_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_best"
        android:layout_centerInParent="true"
        android:text="@string/with_special_assistance"
        android:textColor="#fff"
        android:textSize="20dp"

        />

    <RelativeLayout
        android:id="@+id/relative_where_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_special"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/txt_anywhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anywhere"
            android:textColor="#fff"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/txt_anytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_anywhere"
            android:text="@string/anytime"
            android:textColor="#fff"
            android:textSize="20dp" />
    </RelativeLayout>


    <Button
