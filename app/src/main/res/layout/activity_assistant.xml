<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AssistantActivity"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/toolbar_back_assistant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/toolbar_back1_assistant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/toolbar_back_image_back_assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_back_arrow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/toolbar_back_image_back_assist"
                android:text="@string/back"
                android:textColor="#ffff"
                android:textSize="12sp" />

        </RelativeLayout>



        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_button" />
    </RelativeLayout>


    <View
        android:id="@+id/line1_assistant"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar_back_assistant"
        android:background="@drawable/line1" />

    <TextView
        android:id="@+id/tv_agent_assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE THE AGENT YOU WISH TO CONTACT :"
        android:layout_below="@+id/line1_assistant"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"

        />

    <RelativeLayout
        android:id="@+id/relative_flight_assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_agent_assist"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >





    <TextView
        android:id="@+id/tv_flight_agent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLIGHT AGENT"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/img_flight"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_15ssp"
        />

    <ImageView
        android:id="@+id/img_flight"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/ic_flight_3x"
        android:background="@drawable/shape3"


        />




    </RelativeLayout>

    <View
        android:id="@+id/line_flight_assistant"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="2dp"
        android:layout_below="@+id/relative_flight_assist"
        android:background="@drawable/line1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        />


    <RelativeLayout
        android:id="@+id/relative_hotel_assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_flight_assistant"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"

        >


        <ImageView
            android:id="@+id/img_hotel"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_hotels"
            android:background="@drawable/shape3"


            />

        <TextView
            android:id="@+id/tv_hotel_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOTEL AGENT"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/img_hotel"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            />






    </RelativeLayout>


    <View
    android:id="@+id/line_hotel_assistant"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="2dp"
    android:layout_below="@+id/relative_hotel_assist"
    android:background="@drawable/line1"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    />


    <RelativeLayout
        android:id="@+id/relative_luxury_assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_hotel_assistant"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <ImageView
            android:id="@+id/img_luxury"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_home_luxury_services"
            android:background="@drawable/shape3"


            />
        <TextView
            android:id="@+id/tv_luxury_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LUXURY SERVICES AGENT"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/img_luxury"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            />





    </RelativeLayout>







</RelativeLayout>