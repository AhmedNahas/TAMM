<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <RelativeLayout
        android:id="@+id/relative_flights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/back_flight"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_back_arrow"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/back_flight"
            android:text="@string/back"
            android:textColor="#ffff"
            android:textSize="12sp" />
        <ImageView

            android:layout_centerInParent="true"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/logo"
            android:layout_marginStart="145dp"

            />
        <ImageView
            android:id="@+id/iv_booked_flight_details"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_button"
            android:layout_marginStart="100dp"
            android:layout_marginTop="12dp"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/relative_flights"
        android:layout_centerInParent="true"
        />


    <RelativeLayout
        android:layout_marginTop="@dimen/_100sdp"
        android:id="@+id/relative_right_flights"
        android:layout_below="@+id/relative_flights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/iv_right"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/right"

            />
        <TextView
            android:layout_toEndOf="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_your_email_now"
            android:textSize="40sp"
            android:textColor="#fff"
            android:layout_marginTop="40dp"


            />

    </RelativeLayout>



    <Button
        android:layout_centerInParent="true"
        android:id="@+id/my_trips"
        android:layout_width="200dp"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@+id/relative_man_txt"
        android:text="@string/my_trips"
        android:background="@drawable/shape"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"


        />

    <ImageView
        android:id="@+id/line_flights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/line1"
        android:layout_below="@+id/my_trips"
        />


    <Button
        android:id="@+id/go_home"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_20sdp"
        android:text="@string/home"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/border2"
        android:textColor="@color/app_color"
        android:layout_below="@+id/line_flights"
        android:layout_centerInParent="true"


        />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >




        <ImageView
            android:id="@+id/iv_man1_flights"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/man1"


            />


        <TextView
            android:layout_below="@+id/iv_man1_flights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tap_me_if_you_need_my_assistance"
            android:textColor="#fff"
            android:gravity="center"

            />
    </RelativeLayout>

</RelativeLayout>




