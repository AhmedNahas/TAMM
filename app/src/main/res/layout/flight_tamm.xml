<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FlightTamm"
    android:orientation="vertical"
    android:background="@drawable/plans_background"

    >

    <RelativeLayout
        android:id="@+id/relative_flight_tamm"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >
        <RelativeLayout
            android:id="@+id/toolbar_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            >

            <ImageView
                android:id="@+id/toolbar_back_image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/toolbar_back_image_back"
                android:text="@string/back"
                android:textColor="#ffff"
                android:textSize="12sp" />

        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />
        <ImageView
            android:id="@+id/iv_booked_flight_tamm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/ic_button" />
    </RelativeLayout>

    <ImageView

        android:id="@+id/img_bigline"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/relative_flight_tamm"
        />



    <ImageView
        android:id="@+id/img_hotel"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/flight"
        android:layout_centerInParent="true"
        android:layout_below="@+id/img_bigline"


        />
    <TextView
        android:id="@+id/txt_tamm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAMM"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_below="@+id/img_hotel"
        android:layout_centerInParent="true"



        />
    <TextView
        android:id="@+id/txt_hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLIGHT&amp;PRIVATE JETS"
        android:textSize="20dp"
        android:textColor="@color/app_color"
        android:layout_below="@+id/txt_tamm"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/img_smallline"
        android:layout_width="250dp"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/txt_hotels"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        />

    <TextView
        android:id="@+id/txt_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEST FLIGHT DEALS"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_20ssp"
        android:layout_centerInParent="true"
        android:layout_below="@id/img_smallline"
        android:layout_marginTop="@dimen/_15sdp"
        />
    <TextView
        android:id="@+id/txt_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WITH SPECIAL ASSISTANCE"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/txt_best"
        android:layout_centerInParent="true"

        />


    <RelativeLayout
        android:id="@+id/relative_where_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_special"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_8sdp">
        <TextView
            android:id="@+id/txt_anywhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="anywhere"
            android:textSize="20dp"
            android:textColor="#fff"

            />
        <TextView
            android:id="@+id/txt_anytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", anytime"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/txt_anywhere"
            />






    </RelativeLayout>




    <Button
        android:id="@+id/btn_reserve_user"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="RESERVE FLIGHT"
        android:textColor="#FFF"
        android:background="@drawable/border"
        android:layout_centerInParent="true"
        android:layout_below="@+id/relative_where_time"


        />



    <RelativeLayout
        android:id="@+id/relative_img_flight_tamm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_above="@+id/tv_tab_me_flights"
        android:background="@drawable/man1"
        >

        <TextView
            android:id="@+id/fragment_assistant_label_voice"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_voice"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="SEND VOICE NOTE TO AGENT"
            android:textColor="@color/app_color"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"/>


        <TextView
            android:id="@+id/fragment_assistant_label_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_call"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="CALL AGENT"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_below="@+id/fragment_assistant_label_voice"
            />


        <TextView
            android:id="@+id/fragment_assistant_label_message"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="38"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_message"
            android:fontFamily="sans-serif"
            android:text="SEND MESSAGE TO AGENT"
            android:textColor="@color/app_color"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_alignParentRight="true"/>










    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tab_me_flights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap me if you need MY ASSISTANCE "
        android:textColor="#fff"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_5sdp"
        />





</RelativeLayout>