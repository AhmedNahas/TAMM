<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FlightTamm"
    android:orientation="vertical"
    android:background="@drawable/plans_background"

    >

    <RelativeLayout
        android:id="@+id/relative_flight_tamm"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >
        <RelativeLayout
            android:id="@+id/toolbar_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            >

            <ImageView
                android:id="@+id/toolbar_back_image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/toolbar_back_image_back"
                android:text="@string/back"
                android:textColor="#ffff"
                android:textSize="12sp" />

        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />
        <ImageView
            android:id="@+id/iv_booked_flight_tamm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/ic_button" />
    </RelativeLayout>

    <ImageView

        android:id="@+id/img_bigline"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/relative_flight_tamm"
        />



    <ImageView
        android:id="@+id/img_hotel"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/flight"
        android:layout_centerInParent="true"
        android:layout_below="@+id/img_bigline"


        />
    <TextView
        android:id="@+id/txt_tamm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tamm"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_below="@+id/img_hotel"
        android:layout_centerInParent="true"



        />
    <TextView
        android:id="@+id/txt_hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flight_amp_private_jets"
        android:textSize="20dp"
        android:textColor="@color/app_color"
        android:layout_below="@+id/txt_tamm"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/img_smallline"
        android:layout_width="250dp"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/txt_hotels"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        />

    <TextView
        android:id="@+id/txt_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/best_flight_deals"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_20ssp"
        android:layout_centerInParent="true"
        android:layout_below="@id/img_smallline"
        android:layout_marginTop="@dimen/_15sdp"
        />
    <TextView
        android:id="@+id/txt_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/with_special_assistance"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/txt_best"
        android:layout_centerInParent="true"

        />


    <RelativeLayout
        android:id="@+id/relative_where_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_special"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_8sdp">
        <TextView
            android:id="@+id/txt_anywhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anywhere"
            android:textSize="20dp"
            android:textColor="#fff"

            />
        <TextView
            android:id="@+id/txt_anytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anytime"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_toEndOf="@+id/txt_anywhere"
            />






    </RelativeLayout>




    <Button
