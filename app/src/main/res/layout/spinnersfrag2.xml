<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:id="@+id/spinner_room_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon3"
        android:background="@android:color/transparent"
        android:gravity="end">


        <TextView
            android:id="@+id/no_of_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:backgroundTint="@color/app_color"
            android:gravity="center_horizontal"
            android:text="Room "
            android:textColor="@color/app_color" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/no_of_rooms"
            android:layout_centerVertical="false"
            android:layout_marginTop="8dp"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <TextView
        android:id="@+id/icon3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/layout_check"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:layout_marginStart="26dp"
        android:drawableStart="@drawable/ic_offer" />


    <RelativeLayout
        android:id="@+id/spinner_adult_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_toRightOf="@+id/icon4"
        android:background="@android:color/transparent"
        android:gravity="end">


        <Spinner
            android:id="@+id/adilt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/app_color" />

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/adilt_count"
            android:layout_centerVertical="false"
            android:layout_marginTop="8dp"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <TextView
        android:id="@+id/icon4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/layout_check"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/spinner_room_layout"
        android:drawableStart="@drawable/ic_man_adult_room" />


    <RelativeLayout
        android:id="@+id/spinner_child_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:layout_toRightOf="@+id/icon5"
        android:background="@android:color/transparent"
        android:gravity="end">


        <Spinner
            android:id="@+id/no_of_childs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:backgroundTint="@color/app_color" />

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/no_of_childs"
            android:layout_centerVertical="false"
            android:layout_marginTop="8dp"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <TextView
        android:id="@+id/icon5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/layout_check_out"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/spinner_adult_layout"
        android:drawableStart="@drawable/ic_smallman" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_child"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="35dp"
        android:padding="12dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>