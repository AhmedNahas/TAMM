<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".KnetPaymentDelails">

    <RelativeLayout
        android:id="@+id/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/toolbar_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/toolbar_back_image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/toolbar_back_image_back"
                android:text="@string/back"
                android:textColor="#ffff"
                android:textSize="12sp" />

        </RelativeLayout>


        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_booked_find_hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_button" />


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar_back"
        android:background="@drawable/line1" />


    <RelativeLayout
        android:id="@+id/relative_payments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="@dimen/_10sdp"

        >

        <RelativeLayout
            android:id="@+id/relative_payment_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_paymentd_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_id"
                android:textColor="@color/white"


                />

            <TextView
                android:id="@+id/tv_pay_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_paymentd_id"
                android:text="id"
                android:textColor="@color/white"

                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_result_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_payment_id"
            android:layout_marginStart="@dimen/_10sdp"


            >

            <TextView
                android:id="@+id/tv_result_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_code"
                android:textColor="@color/white"


                />

            <TextView
                android:id="@+id/tv_result_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_result_code"
                android:text="Code "
                android:textColor="@color/white"

                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relative_transaction_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_result_code"
            android:layout_marginStart="@dimen/_10sdp"


            >

            <TextView
                android:id="@+id/tv_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_id"
                android:textColor="@color/white"


                />

            <TextView
                android:id="@+id/tv_transaction_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_transaction_id"
                android:text="Transaction "
                android:textColor="@color/white"

                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relative_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_transaction_id"
            android:layout_marginStart="@dimen/_10sdp"


            >

            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auth"
                android:textColor="@color/white"


                />

            <TextView
                android:id="@+id/tv_auth_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_auth"
                android:text="Number Of Auth "
                android:textColor="@color/white"

                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_track_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_auth"
            android:layout_marginStart="@dimen/_10sdp"


            >

            <TextView
                android:id="@+id/tv_track_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/track_id"
                android:textColor="@color/white"


                />

            <TextView
                android:id="@+id/tv_track_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_track_id"
                android:text="Track Number"
                android:textColor="@color/white"

                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_reference_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_track_id"
            android:layout_marginStart="@dimen/_10sdp"


            >

            <TextView
                android:id="@+id/tv_reference_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reference_number"
                android:textColor="@color/white"


                />

            <TextView
                android:id="@+id/tv_reference_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_reference_number"
                android:text="reference"
                android:textColor="@color/white"

                />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relative_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_reference_number"
            android:layout_marginStart="@dimen/_10sdp"


            >

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:textColor="@color/white"


                />

            <TextView
                android:id="@+id/tv_amount_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_amount"
                android:text="amount count"
                android:textColor="@color/white"

                />

        </RelativeLayout>


